<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanting.me.mapper.UserMapper">

   <insert id="add" parameterType="User">
       INSERT INTO user
        (name, major, haoma, sex, college, password, create_time,remark)
        VALUES
        ( #{name}, #{major}, #{haoma}, #{sex}, #{college}, #{password},now(), #{remark})
   </insert>

    <delete id="del" parameterType="Integer">
      delete from user where id=#{id}
    </delete>

    <delete id="dels" >
      delete from user where id in
      <foreach collection="ids" open="(" close=")"  separator="," item="id" >
          #{id}
      </foreach>


    </delete>

    <update id="update" parameterType="User">
        UPDATE user SET
        name = #{name},
        major = #{major},
        haoma = #{haoma},
        sex = #{sex},
        college = #{college},
        password = #{password},
        update_time = now(),
        remark = #{remark}
        where
        id=#{id}
    </update>

    <select id="getById" parameterType="Integer" resultType="User">
        select  * from user where id=#{id}

    </select>
    <select id="search" resultType="User">
        select  * from user limit #{start},#{rows}

    </select>

    <select id="countTotal" resultType="Integer">
      select  count(*) from user
    </select>

    <select id="getByHaoMa" parameterType="String" resultType="User">
      select * from user where haoma=#{username}
    </select>
</mapper>